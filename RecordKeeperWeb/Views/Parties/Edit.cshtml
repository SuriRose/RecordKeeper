@model RecordKeeperBizObjects.bizParty

@{
    ViewData["Title"] = "Edit";
    string errormsg = ViewBag.ErrorMessage;
}

<h1>Edit @Model.Party</h1>
@if(string.IsNullOrEmpty(errormsg) == false)
{
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
}
else{
    <h3>Are you sure you want to edit @Model.Party?</h3>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="PartyId"; />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Party" class="control-label"></label>
                <input asp-for="Party" class="form-control" />
                <span asp-validation-for="Party" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearStarted" class="control-label"></label>
                <input asp-for="YearStarted" class="form-control" />
                <span asp-validation-for="YearStarted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
