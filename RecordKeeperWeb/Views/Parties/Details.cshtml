@using RecordKeeperBizObjects;
@*@model bizParty*@

@model RecordKeeperBizObjects.bizParty

@{
    ViewData["Title"] = "President";
    ViewBag.Title = Model.Party;
}

<div class="row"
<h1>@Model.Party</h1>
<div class="row">
<div class="col-md-12">
    @Model.Party started in @Model.YearStarted and has @Model.PresidentCount presidents. The party color is 
    <span style="color:@Model.Color">@Model.Color</span>
</div>
</div>
<div class ="row">
    <ul>
        @foreach (bizPresident p in Model.PresidentList(true))
            {
                <li>
                    @Html.ActionLink(p.Num + " " + p.FirstName + " " + p.LastName, "President", "USGov", new{id = p.Code})
                </li>
            }
    </ul>
</div>
<div class="col-md-2">
        @Html.ActionLink("Edit", "Edit", new {id = Model.Party}  ,new{Class = "btn btn-primary"})
</div>
<div class="col-md-2">
        @Html.ActionLink("Delete", "Delete", new {id = Model.Party}  ,new{Class = "btn btn-danger"})
</div>
